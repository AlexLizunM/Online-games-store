.wrapper.d-flex
  .sidebar-wrapper.bg-primary.border-right
    = search_form_for @q do |f|
      .search
        = f.search_field(:name_cont, placeholder: 'Search games')
        %button{ type: 'submit', id: 'search-button' }
          = fa_icon "search"
        = f.search_field(:price_money_gteq, placeholder: 'Min Price')
        = f.search_field(:price_money_lteq, placeholder: 'Max Price')
  .page-content-wrapper
    .container-fluid
      .row.justify-content-center 
        - @games.each do |game|
          .card.game-card
            = link_to image_tag(game.cover, size: '300x200'), game_path(game) if game.cover.attached?
            .card-body
              %h5.card-title= truncate(game.name, length: 20)
              %p.card-text= to_dollars(game.price)
      .row.justify-content-center
        != pagy_bootstrap_nav(@pagy)
